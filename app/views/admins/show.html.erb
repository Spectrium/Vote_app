    <% end %>
    <% if @admin.fokontany_id != nil %>
    	<li class="list-group-item">Fokontany : <%= @admin.fokontany.name %></li>
    <% end %>
    <li class="list-group-item">Email : <%= @admin.email %></li>
  </ul>
<a href="<%= edit_admin_path(@admin.id) %>"><i class="fa fa-edit"></i>Editer</a></div><br><br>
